{
  "short_name": "Extension",
  "name": "Chrome extension",
  "author": "hektor misplon",
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",

  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
      "scripts": [
          "js/background.js"
      ],
      "persistent": false
  },
  "permissions": ["activeTab, storage, declarativeContent"]
}